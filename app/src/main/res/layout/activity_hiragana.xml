<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.duongthuhien.kltn.hiragana.HiraganaActivity">
    <LinearLayout
        android:id="@+id/ll_BangChuCai"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@color/colorHiragana">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="40dp"
            android:background="@drawable/iconhiragana"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/HiraganaV"
                android:textSize="30sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:text="@string/HiraganaJ"
                android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/lv_BaihocHiragana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
